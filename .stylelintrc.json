{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "rules": {
    "indentation": 4,
    "number-leading-zero": null,
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": ["extend", "at-root", "debug", "warn", "error", "if", "else", "elseif", "for", "each", "while", "mixin", "include", "content", "return", "function", "media", "content"]
    }]
  }
}